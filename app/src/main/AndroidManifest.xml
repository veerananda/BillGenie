<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BillGenie">
        
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.BillGenie">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:parentActivityName=".LoginActivity" />
        
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.BillGenie" />
        
        <activity
            android:name=".AddMenuItemActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".MenuSelectionActivity"
            android:exported="false"
            android:parentActivityName=".BillGenerationActivity" />
            
        <activity
            android:name=".MenuPricingActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".BillGenerationActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".OrdersBillingActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".TakeOrderActivity"
            android:exported="false"
            android:parentActivityName=".BillGenerationActivity" />
            

        <activity
            android:name=".MenuIngredientsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".FlavourSelectionActivity"
            android:exported="false"
            android:parentActivityName=".MenuIngredientsActivity" />
            
        <activity
            android:name=".MenuItemSelectionActivity"
            android:exported="false"
            android:parentActivityName=".MenuIngredientsActivity" />
            
        <activity
            android:name=".IngredientManagementActivity"
            android:exported="false"
            android:parentActivityName=".FlavourSelectionActivity" />
            
        <activity
            android:name=".IngredientsActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize" />
            
        <activity
            android:name=".InventoryActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".CheckoutActivity"
            android:exported="false"
            android:parentActivityName=".OrdersBillingActivity" />
            
        <activity
            android:name=".FinalBillActivity"
            android:exported="false"
            android:parentActivityName=".CheckoutActivity" />
            
        <activity
            android:name=".UserManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <!-- Keep old BillActivity for backwards compatibility -->
        <activity
            android:name=".BillActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".QRMenuActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />
            
        <activity
            android:name=".MenuViewActivity"
            android:exported="true"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="billgenie" android:host="menu" />
            </intent-filter>
        </activity>
            
        <!-- FileProvider for sharing QR codes -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
            
        <!-- Backup Reminder Receiver -->
        <receiver
            android:name=".BackupReminderReceiver"
            android:enabled="true"
            android:exported="false" />
            
    </application>

</manifest>