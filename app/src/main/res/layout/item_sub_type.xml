<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/tvSubTypeName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="14sp"
        android:textColor="@color/text_primary"
        android:background="@drawable/sub_type_background"
        android:paddingStart="12dp"
        android:paddingTop="6dp"
        android:paddingEnd="12dp"
        android:paddingBottom="6dp"
        tools:text="Chicken" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEditSubType"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:contentDescription="Edit Sub-Type"
        app:icon="@android:drawable/ic_menu_edit"
        app:iconSize="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDeleteSubType"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:contentDescription="Delete Sub-Type"
        app:icon="@android:drawable/ic_menu_delete"
        app:iconTint="@color/error_color"
        app:iconSize="16dp" />

</LinearLayout>